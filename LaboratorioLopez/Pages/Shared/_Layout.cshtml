<!DOCTYPE html>

@inject SignInManager<IdentityUser<int>> signInManager;

<html lang="es-do">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Images/LabIcon.png" type="image/x-icon">    
    <title>@ViewData["Title"] - LaboratorioLopez</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 container">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Laboratorio Lopez</a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@
                @if (signInManager.IsSignedIn(User))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="" asp-page="/ListaPaciente/Index">Pacientes</a>
                            </li>

                            <li class="dropdown">
                                <a class="dropdown-toggle nav-link text-danger" data-toggle="dropdown" href="#">Finanzas</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="nav-link text-danger" asp-area="" asp-page="/Factura/Inicio">Cotizar</a>
                                        <a class="nav-link text-danger" asp-area="" asp-page="/Factura/Pagos">Pagos</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a class="dropdown-toggle nav-link text-danger" data-toggle="dropdown" href="#">Examen</a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/ListaExamen/Index">Registro Examenes</a>
                                        <a class="nav-link text-dark" asp-area="" asp-page="/ListaExamen/RegistroExamen">Registro Resultado</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                    <ul class="navbar-nav ml-auto">
                        <li class="dropdown">
                            <a class=" nav-link text-danger" data-toggle="dropdown" href="#">@User.Identity.Name<img style="width:40%; height:40%" src="/images/NonPerson.png" asp-append-version="true" /></a>

                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="cuenta" asp-action="cambiarcontraseña">
                                        Contraseña
                                    </a>
                                    <a class="nav-link text-danger" asp-controller="cuenta" asp-action="registro">
                                        Registrar
                                    </a>
                                    <form method="post" asp-action="logout" asp-controller="cuenta">
                                        <button type="submit" class="nav-link btn btn-link  text-danger" style="width:auto">
                                            Salir
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="cuenta" asp-action="acceso">
                                <img class="card-img-top imageThumbnail" src="/images/NonPerson.png" style="width:60%; height:60%" asp-append-version="true" />
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Laboratorio Lopez Bani, Prov. Peravia, Rep. Dom. - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>    
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
