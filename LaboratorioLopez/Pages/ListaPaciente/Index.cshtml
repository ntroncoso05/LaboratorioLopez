@page
@model LaboratorioLopez.Pages.ListaPaciente.IndexModel

@{
    ViewData["Title"] = "Pacientes";
}

<div class="col-12 border p-3">
    <div class="col-6">
        <h2 class="text-info">Registro Pacientes</h2>
    </div>

    <div class="col-3 offset-9">
        <a asp-page="UpsertPaciente" class="btn btn-info form-control text-white">
            Agregar Nuevo Paciente
        </a>
    </div>

</div>

<div class="container row p-0 m-0">
    <div class="col-12 border p-2">
        <table id="DT_loadPaciente" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Dirección</th>
                    <th>Telefono</th>
                    <th>Fecha Nacimiento</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/listaPaciente.js"></script>
}
